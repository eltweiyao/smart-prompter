.container-home {
  display: flex;
  flex-direction: column;
  min-height: 100vh; /* Allow scroll */
  height: auto;
  background-color: #f7f8fa;
  padding: 30rpx;
  box-sizing: border-box;
}

/* Input Section */
.input-section {
  /* flex: 1; Removed to allow manual height */
  flex: none;
  background: #fff;
  border-radius: 24rpx;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.03);
  margin-bottom: 30rpx;
  transition: height 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
}

.script-input {
  flex: 1;
  width: 100%;
  font-size: 32rpx;
  line-height: 1.5;
  color: #333;
}

.input-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #999;
}

.resize-controls {
  display: flex;
  align-items: center;
  background: #f0f2f5;
  border-radius: 30rpx;
  padding: 4rpx 10rpx;
}
.resize-btn {
  width: 50rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #666;
}
.resize-label {
  margin: 0 10rpx;
  font-size: 22rpx;
}

.right-actions {
  display: flex;
  align-items: center;
}

.clear-btn {
  color: #ff3b30;
  padding: 10rpx 20rpx;
  background: rgba(255, 59, 48, 0.1);
  border-radius: 20rpx;
  margin-left: 20rpx;
}

/* Controls Section */
.controls-section {
  background: #fff;
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.03);
}

.options-group {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.orientation-selector {
  flex: 1;
  display: flex;
  background: #e5e5ea; /* Lighter background */
  border-radius: 10rpx; /* Slightly larger border-radius */
  padding: 4rpx; /* Reduced padding */
  margin-right: 20rpx; /* Keep margin for spacing with recording switch */
}

.setting-item {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #333;
}

.setting-item text {
  margin-right: 10rpx;
}

.option {
  flex: 1;
  text-align: center;
  padding: 8rpx 0; /* Adjusted padding */
  border-radius: 6rpx; /* Adjusted border-radius */
  font-size: 26rpx; /* Adjusted font size */
  color: #555; /* Slightly darker default color */
  transition: all 0.2s;
}

.option.active {
  background: #fff;
  color: #007aff;
  font-weight: 600; /* Bolder font-weight */
  box-shadow: 0 1rpx 8rpx rgba(0,0,0,0.1); /* More prominent shadow */
}

.main-actions {
  display: flex;
  gap: 20rpx;
}

.btn-save,
.btn-start {
  flex: 1;
  border-radius: 40rpx;
  font-size: 30rpx;
  font-weight: bold;
  padding: 18rpx 0;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.08);
}

.btn-save {
  flex: 0.5;
  background: #e5e5ea;
  color: #000;
}

.btn-start {
  flex: 1;
  background: #007aff;
  color: #fff;
}

.btn-save:active,
.btn-start:active {
  transform: scale(0.98);
  box-shadow: none;
}

/* History Section */
.history-section {
  height: 220rpx; /* Fixed height for list */
}

.history-list {
  display: flex;
  height: 180rpx;
}

.history-card {
  flex: 0 0 240rpx; /* Fixed width */
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-right: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.03);
}

.card-content {
  font-size: 26rpx;
  color: #333;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
  line-height: 1.4;
}

.card-date {
  font-size: 20rpx;
  color: #999;
  margin-top: 10rpx;
}

.empty-history {
  width: 100%;
  text-align: center;
  color: #999;
  font-size: 26rpx;
  line-height: 160rpx;
}