.container-prompter {
  position: relative;
  width: 100vw;
  height: 100vh;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  transition: background-color 0.3s;
}

.header {
  display: flex;
  justify-content: flex-start; /* Align everything from left */
  align-items: center;
  padding: 10rpx 20rpx; 
  z-index: 20;
  transition: opacity 0.3s;
  min-height: 80rpx;
}

.left-group {
  display: flex;
  gap: 20rpx;
  margin-right: 30rpx;
}

.icon-btn {
  background: rgba(100,100,100,0.3);
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.icon { font-size: 36rpx; color: #fff; font-weight: bold; }

.mode-switch {
  display: flex;
  background: rgba(100,100,100,0.2);
  border-radius: 40rpx;
  padding: 4rpx;
}

.right-placeholder {
  flex: 1; /* Pushes content but respects capsule button area */
}
.mode-item {
  padding: 10rpx 30rpx;
  font-size: 28rpx;
  border-radius: 36rpx;
  color: #888;
}
.mode-item.active {
  background: #007aff;
  color: #fff;
  font-weight: bold;
}

.prompter-viewport {
  flex: 1;
  width: 100%;
  overflow: hidden;
  position: relative;
  z-index: 10;
  /* Capture touches */
}

.prompter-content {
  width: 100%;
  text-align: center;
  /* Hardware acceleration hint */
  will-change: transform;
}

/* Padding space is now handled via inline styles for dynamic sizing */
.padding-space {
  /* height set by inline style */
}

/* Focus Line Indicator */
.focus-line-container {
  position: absolute;
  /* top set by inline style */
  left: 0;
  width: 100%;
  height: 4rpx;
  transform: translateY(-50%);
  pointer-events: none; 
  z-index: 25;
  display: flex;
  align-items: center;
  opacity: 0.8;
}
.focus-arrow {
  color: #007aff;
  font-size: 40rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
}
.focus-line {
  flex: 1;
  height: 4rpx;
  background: #007aff;
}


.ai-feedback-fixed {
  position: absolute;
  bottom: 80rpx;
  left: 50%;
  transform: translateX(-50%);
  z-index: 45;
  animation: pulse 2s infinite;
}
.ai-status {
  font-size: 26rpx;
  color: #007aff;
  background: rgba(0,122,255,0.15);
  backdrop-filter: blur(4px);
  padding: 12rpx 30rpx;
  border-radius: 40rpx;
  border: 1px solid rgba(0,122,255,0.3);
  white-space: nowrap;
}

@keyframes pulse {
  0% { opacity: 0.6; }
  50% { opacity: 1; }
  100% { opacity: 0.6; }
}

.controls {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 50;
  display: flex;
  justify-content: center;
  align-items: center;
  pointer-events: auto; /* Ensure clickable */
}

.btn-play-round {
  width: 140rpx;
  height: 140rpx;
  background: rgba(0, 0, 0, 0.6);
  border: 4rpx solid rgba(255, 255, 255, 0.8);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.3);
  transition: all 0.2s;
  backdrop-filter: blur(4px);
}

.btn-play-round:active {
  transform: scale(0.9);
  background: rgba(0, 0, 0, 0.8);
}

.btn-play-ai {
  background: rgba(88, 86, 214, 0.6); /* Purple tint for AI */
  border-color: rgba(255, 255, 255, 0.9);
}
.btn-play-ai:active {
  background: rgba(88, 86, 214, 0.9);
}

.icon-play {
  width: 0; 
  height: 0; 
  border-top: 24rpx solid transparent;
  border-bottom: 24rpx solid transparent;
  border-left: 40rpx solid #fff;
  margin-left: 10rpx; /* Visual center adjustment */
}

/* Settings Panel */
.settings-panel {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #fff;
  padding: 40rpx;
  z-index: 100;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  box-shadow: 0 -4rpx 20rpx rgba(0,0,0,0.1);
  box-sizing: border-box;
}
.setting-group { margin-bottom: 40rpx; }
.setting-title { font-size: 32rpx; font-weight: bold; margin-bottom: 20rpx; color: #333; }
.setting-item { margin-bottom: 20rpx; }
.setting-item text { color: #666; font-size: 26rpx; }
.switch-item { display: flex; justify-content: space-between; align-items: center; }

.color-row { display: flex; align-items: center; margin-bottom: 20rpx; }
.color-row text { width: 100rpx; font-size: 28rpx; color: #666; }
.color-options { display: flex; gap: 20rpx; }
.color-circle { width: 60rpx; height: 60rpx; border-radius: 50%; box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.2); }
.btn-close-settings { background: #f0f0f0; color: #333; margin-top: 10rpx; }

/* Focus Masks */
.focus-mask-top, .focus-mask-bottom {
  position: absolute;
  left: 0;
  width: 100%;
  z-index: 15; /* Above text, below header/controls */
  pointer-events: none;
}
.focus-mask-top {
  top: 0;
}
/* Bottom mask top position is set via inline style */

/* Countdown Overlay */
.countdown-overlay {
  position: absolute;
  top: 0; left: 0;
  width: 100%; height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 60;
  background: rgba(0,0,0,0.3);
}
.countdown-text {
  font-size: 160rpx;
  font-weight: bold;
  color: #fff;
  text-shadow: 0 4rpx 10rpx rgba(0,0,0,0.5);
  animation: popIn 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}

@keyframes popIn {
  0% { transform: scale(0.5); opacity: 0; }
  100% { transform: scale(1); opacity: 1; }
}
