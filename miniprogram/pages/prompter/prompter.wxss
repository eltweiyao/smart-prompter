.container-prompter {
  position: relative;
  width: 100vw;
  height: 100vh;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  transition: background-color 0.3s;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 30rpx; /* Reduced vertical padding */
  z-index: 20;
  transition: opacity 0.3s;
  min-height: 80rpx; /* Ensure clickability */
}

.icon-btn {
  background: rgba(100,100,100,0.3);
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.icon { font-size: 36rpx; color: #888; font-weight: bold; }

.mode-switch {
  display: flex;
  background: rgba(100,100,100,0.2);
  border-radius: 40rpx;
  padding: 4rpx;
}
.mode-item {
  padding: 10rpx 30rpx;
  font-size: 28rpx;
  border-radius: 36rpx;
  color: #888;
}
.mode-item.active {
  background: #007aff;
  color: #fff;
  font-weight: bold;
}

.prompter-viewport {
  flex: 1;
  width: 100%;
  overflow: hidden;
  position: relative;
  z-index: 10;
  /* Capture touches */
}

.prompter-content {
  width: 100%;
  text-align: center;
  /* Hardware acceleration hint */
  will-change: transform;
}

.padding-space {
  height: 40vh; /* Align text start/end to 40% of screen */
}

/* Focus Line Indicator */
.focus-line-container {
  position: absolute;
  top: 40%; /* Move focus line above center */
  left: 0;
  width: 100%;
  height: 2rpx;
  transform: translateY(-50%);
  pointer-events: none; 
  z-index: 5;
  display: flex;
  align-items: center;
  opacity: 0.3;
}
.focus-arrow {
  color: #007aff;
  font-size: 24rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
}
.focus-line {
  flex: 1;
  height: 2rpx;
  background: #007aff;
}


.ai-feedback {
  margin-top: 20rpx;
  animation: pulse 2s infinite;
}
.ai-status {
  font-size: 24rpx;
  color: #007aff;
  background: rgba(0,122,255,0.1);
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
}

@keyframes pulse {
  0% { opacity: 0.6; }
  50% { opacity: 1; }
  100% { opacity: 0.6; }
}

.controls {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 50;
  display: flex;
  justify-content: center;
  align-items: center;
  pointer-events: auto; /* Ensure clickable */
}

.btn-play-round {
  width: 140rpx;
  height: 140rpx;
  background: rgba(0, 0, 0, 0.6);
  border: 4rpx solid rgba(255, 255, 255, 0.8);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.3);
  transition: all 0.2s;
  backdrop-filter: blur(4px);
}

.btn-play-round:active {
  transform: scale(0.9);
  background: rgba(0, 0, 0, 0.8);
}

.btn-play-ai {
  background: rgba(88, 86, 214, 0.6); /* Purple tint for AI */
  border-color: rgba(255, 255, 255, 0.9);
}
.btn-play-ai:active {
  background: rgba(88, 86, 214, 0.9);
}

.icon-play {
  width: 0; 
  height: 0; 
  border-top: 24rpx solid transparent;
  border-bottom: 24rpx solid transparent;
  border-left: 40rpx solid #fff;
  margin-left: 10rpx; /* Visual center adjustment */
}

.btn-primary, .btn-ai {
  /* Legacy styles - keeping just in case or for AI mode text button if needed, 
     but we will likely use round button for basic too */
  background: #007aff;
  color: #fff;
  border-radius: 50rpx;
  padding: 0 80rpx;
  font-size: 32rpx;
}
.btn-ai { background: #5856d6; }

/* Settings Panel */
.settings-panel {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #fff;
  padding: 40rpx;
  z-index: 100;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  box-shadow: 0 -4rpx 20rpx rgba(0,0,0,0.1);
  box-sizing: border-box;
}
.setting-group { margin-bottom: 40rpx; }
.setting-title { font-size: 32rpx; font-weight: bold; margin-bottom: 20rpx; color: #333; }
.setting-item { margin-bottom: 20rpx; }
.setting-item text { color: #666; font-size: 26rpx; }
.color-row { display: flex; align-items: center; margin-bottom: 20rpx; }
.color-row text { width: 100rpx; font-size: 28rpx; color: #666; }
.color-options { display: flex; gap: 20rpx; }
.color-circle { width: 60rpx; height: 60rpx; border-radius: 50%; box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.2); }
.btn-close-settings { background: #f0f0f0; color: #333; margin-top: 10rpx; }